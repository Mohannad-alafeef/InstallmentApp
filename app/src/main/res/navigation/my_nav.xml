<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_to_add_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="dev.kkarot.installmentapp.ui.fragments.HomeFragment"
        android:label="@string/customers"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addCustomerFragment"
            app:destination="@id/addCustomerFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_right"
            />
        <action
            android:id="@+id/action_homeFragment_to_customerDetailsFragment"
            app:destination="@id/customerDetailsFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:popEnterAnim="@android:anim/slide_in_left" />
    </fragment>
    <fragment
        android:id="@+id/addCustomerFragment"
        android:name="dev.kkarot.installmentapp.ui.fragments.AddCustomerFragment"
        android:label="@string/customer_info"
        tools:layout="@layout/fragment_add_customer" >
        <action
            android:id="@+id/action_addCustomerFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/customerDetailsFragment"
        android:name="dev.kkarot.installmentapp.ui.fragments.CustomerDetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_customer_details" >
        <argument
            android:name="customer_info"
            app:argType="dev.kkarot.installmentapp.database.models.CustomerInfo"
            app:nullable="false" />
        <action
            android:id="@+id/action_customerDetailsFragment_to_addInstallmentFragment"
            app:destination="@id/addInstallmentFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/addInstallmentFragment"
        android:name="dev.kkarot.installmentapp.ui.fragments.AddInstallmentFragment"
        android:label="fragment_add_installment"
        tools:layout="@layout/fragment_add_installment" >
        <argument
            android:name="customerInfo"
            app:argType="dev.kkarot.installmentapp.database.models.CustomerInfo" />
    </fragment>
</navigation>